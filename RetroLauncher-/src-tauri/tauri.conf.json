{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "RetroLauncher",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true,
        "open": true,
        "execute": true,
        "sidecar": true
      },
      "dialog": {
        "all": true,
        "open": true,
        "save": true,
        "message": true,
        "confirm": true,
        "ask": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "scope": ["$APPDATA/*", "$RESOURCE/*", "$HOME/*", "$DOCUMENT/*"]
      },
      "path": {
        "all": true
      },
      "process": {
        "all": false,
        "relaunch": true,
        "exit": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$APPDATA/**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.retrolauncher.app",
      "icon": [
        "icons/icon.ico",
        "icons/icon.icns",
        "icons/icon.png"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "RetroLauncher",
        "width": 1920,
        "height": 1080,
        "minWidth": 1024,
        "minHeight": 600,
        "decorations": true,
        "transparent": false
      }
    ]
  }
}
